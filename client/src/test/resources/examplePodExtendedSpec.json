{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "extensive-container-spec"
  },
  "spec": {
    "securityContext": {
      "runAsUser": 1000,
      "fsGroup": 2000
    },
    "restartPolicy": "OnFailure",
    "serviceAccountName": "my-account",
    "terminationGracePeriodSeconds": 60,
    "hostNetwork": true,
    "dnsPolicy": "None",
    "shareProcessNamespace": true,
    "imagePullSecrets": [
      {
       "name": "secret"
      }
    ],
    "priority": 2,
    "hostname": "abc",
    "subdomain": "def",
    "containers": [
      {
        "name": "basic",
        "image": "fake",
        "command": [
          "ls",
          "-l"
        ],
        "args": [
          "abc",
          "def"
        ],
        "resources": {
          "limits": {
            "memory": "128Mi",
            "cpu": "500m"
          },
          "requests": {
            "memory": "128Mi",
            "cpu": "500m"
          }
        },
        "env": [
          {
            "name": "POD_NAMESPACE",
            "valueFrom": {
              "fieldRef": {
                "fieldPath": "metadata.namespace"
              }
            }
          },
          {
            "name": "MY_SECRET",
            "valueFrom": {
              "secretKeyRef": {
                "name": "abc",
                "key": "xyz"
              }
            }
          }
        ],
        "volumeMounts": [
          {
            "name": "varsub",
            "mountPath": "/var",
            "readOnly": true,
            "subPath": "subpath",
            "mountPropagation": "HostToContainer"
          },
          {
            "name": "logs",
            "mountPath": "/var/log/app.log"
          }
        ],
        "terminationMessagePolicy": "FallbackToLogsOnError",
        "terminationMessagePath": "/tmp/my-log",
        "terminationGracePeriodSeconds": 1800,
        "lifecycle": {
          "preStop": {
            "exec": {
              "command": [
                "/bin/sh",
                "-c",
                "service drain"
              ]
            }
          }
        },
        "livenessProbe": {
          "exec": {
            "command": [
              "/bin/bash",
              "-c",
              "/live-probe.sh"
            ]
          },
          "initialDelaySeconds": 15,
          "timeoutSeconds": 5,
          "failureThreshold": 1,
          "periodSeconds": 10
        },
        "readinessProbe": {
          "exec": {
            "command": [
              "/bin/bash",
              "-c",
              "/ready-probe.sh"
            ]
          },
          "initialDelaySeconds": 15,
          "timeoutSeconds": 5,
          "failureThreshold": 1,
          "periodSeconds": 10
        },
        "securityContext": {
          "runAsUser": 1000,
          "allowPrivilegeEscalation": true
        }
      }
    ],
    "volumes": [
      {
        "name": "keys",
        "secret": {
          "secretName": "secret",
          "defaultMode": 256,
          "items": [
            {
              "key": "host-key-pub",
              "path": "host_key.pub"
            },
            {
              "key": "other-key",
              "path": "worker_key"
            }
          ]
        }
      }
    ]
  }
}
